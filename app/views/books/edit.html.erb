<h1>編集</h1>
  <% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %> error(s) prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
<div class="field">
  <h4>本のタイトル</h4>
  <%= f.text_field :title %>
</div>

<div class="field">
  <h4>感想</h4>
  <%= f.text_area :body %>
</div>

<div class="actions">
  <%= f.submit 'Update Book' %>
</div>
  <%= link_to "Show", book_path(@book.id) %>
   |
  <%= link_to "Back", books_path %>
<% end %>